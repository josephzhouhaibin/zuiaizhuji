.icon-close{ width: 25px; height: 25px; border-radius: 50%; color: #999; line-height: 25px; font-size: 18px; text-align: center;margin:10px 10px 0 0;position: absolute;right: 0;z-index: 1;}
.icon-close:active{ background: rgba(0, 0, 0, 0.05);}

.floatBoxBg{animation-direction: 0.2s;}
/* css 动画 */
@keyframes fadeIn{
  0%{opacity:0}
  100%{opacity:1}
}

@keyframes fadeInUp{
  0%{transform:translateY(100%)}
  100%{transform:translateY(0)}
}

.ui-cells{background: #fff;}
.ui-cell{padding: 20rpx 30rpx; line-height: 1.4;}
.ui-cell.gridXb::before{left: 30rpx;}
.ui-cell.gridXb:last-child:before{display: none;}