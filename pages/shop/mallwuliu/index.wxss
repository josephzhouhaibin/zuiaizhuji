@import "/css/DuoguanShop/DuoguanShop-template-default.wxss";

page{background: #fff;}

.top-logistics{background: var(--DShop-mcolor-leight);color: #fff;padding: 30rpx;line-height: 1.5;}

.info-list{padding-left: 40rpx;position: relative;margin-left: 40rpx;color: #555;padding: 30rpx;}
.info-list:first-child{color: #f66;}
.info-list::after{content: '';display: block;width: 24rpx;height: 24rpx;border-radius: 50%;background: #aaa;position: absolute;top: 50%;left: -12rpx;transform: translateY(-50%);}
.info-list:first-child:after{background: currentColor;}
.info-list .time{color: #999;font-size: 26rpx;}
.info-list:first-child .time{color: currentColor;}

.kd-lsit{ background: #fff;}
.kd-item:last-child::before{ display: none;}
.kd-item{ padding:30rpx;}
.kd-per{ width: 160rpx; text-align: center;}
.kd-item:first-child{ color: #e64340;}
.iconfontc{ display: -webkit-box; -webkit-box-align: center;}