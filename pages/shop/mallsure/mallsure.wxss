/*mallsure.wxss*/

.mall-choose-item{display: flex;background: #fff;padding: 20rpx 30rpx;align-items: center;box-sizing: border-box;}
.mall-choose-item .wx-radio-input{margin-right: 0;width: 40rpx;height: 40rpx;}

/* 地址 */
.sure-adress{position: relative;}
.sure-adress::after{content: '';display: block;width: 100%;height: 4px;
background: repeating-linear-gradient(135deg,#fb8b8b 0,#fb8b8b 12.5%,transparent 0,transparent 25%,#88c3ec 0,#88c3ec 37.5%,transparent 0,transparent 50%) 0 / 160rpx 160rpx;position: absolute;bottom: 0;left: 0;}

.mallsure-title{ background: #fff; padding: 10px;}
.sure-item{ padding:15px 10px; background: #fff; margin-top: 5px;}
.sure-img{ width: 60px; height: 60px; display: block; margin-right: 8px;}
.sure-title{ line-height: 140%;}
.message-input{ position: absolute; top: -15px; bottom: -15px; width: 100%; height: auto; }

.mallcart-float{ height: 46px;}
.mallcart-foot{ position: fixed; z-index: 999; left: 0; bottom: 0; width: 100%; height: 46px; line-height: 46px; background: #fff;}
.mall-cart-btn{ background:#e64340; display: block; color: #fff; padding: 0 30px; border-radius: 0;}


.pssel{ position:fixed; left: 0; top: 0; right: 0; bottom: 0; background: rgba(0, 0, 0, 0.8); z-index: 999;}
.psselbox{ position: absolute; left: 0; width: 100%; bottom: 0; background: #fff;}
.icon-close{ width: 24px; height: 24px; border-radius: 50%; border: 1px solid #ccc; line-height: 24px; text-align: center;}
.psseltit{ padding:15px 10px; height: 56px;}
.psselitem{  padding: 10px;}
.add-address-btn{ background:#e64340; color: #fff; border-radius: 0;text-align: center;padding:10px 0;}
.juan{padding-top:0;padding-bottom:0;}
.sure-item.juan .list{line-height: 80rpx;}
.ditu{ -webkit-box-align: center; display: -webkit-box;}






























