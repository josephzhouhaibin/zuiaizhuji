button.search-btn icon{ vertical-align: top; margin-top: 15rpx;}
.search-btn::after{ display: none;}
.saoyisao,.contact-button{background: none;margin:0;padding:0;width:100rpx;color: #666; font-size: 48rpx;line-height: 64rpx;transition: all 0.3s linear;}
.contact-button::after{ display: none;}
.saoyisao:active,.contact-button:active{background: rgba(0, 0, 0, 0.05);}

