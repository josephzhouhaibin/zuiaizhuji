.scand-card{padding: 30rpx;background: #fff;}
.scand-img{width: 160px;height: 160px;margin: 20rpx auto 0;}

.fixed-bottom{height: 116rpx;}
.bottom-btnbox{position: fixed;left: 0;right:0;bottom: 0;background: #fff;padding: 30rpx 20rpx;text-align: right;box-shadow: 0 0 5px rgba(0, 0, 0, 0.05);}
.bottom-btn{display: inline-block;vertical-align: bottom;background: transparent;font-size: 28rpx;line-height: 56rpx;border-radius: 6rpx;padding: 0 20rpx;color: #666;}
.bottom-btn:nth-child(n+2){margin-left: 20rpx;}
.bottom-btn::after{border-color: currentColor;border-radius: 6rpx;}
.bottom-btnfill{background: #f66;color: #fff;}
.bottom-btnfill::after{border: none;}