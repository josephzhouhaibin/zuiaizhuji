/* mallcart.wxss */
.mallcart-title{ padding: 10px; background: #fff;}
.mallcart-del{ width:30px; text-align: center;}
.cart-item{ padding:15px 10px; background: #fff; margin-top: 5px;}
.cart-img{ width: 60px; height: 60px; display: block;}
.cart-title{ line-height: 140%;}
.count-set{ width:230rpx; border: 1px solid #eee;}
.count-set text{ display: block; line-height: 30px;transition: all .3s linear;}
.count-set text:active{background: rgba(0, 0, 0, 0.05);}
.buy-couts{ border-left: 1px solid #eee; border-right: 1px solid #eee; height: 30px;}
.count-set .flase{ background: rgba(0, 0, 0, 0.05); color: #999;}

.mallcart-float{ height: 46px;}
.mallcart-foot{ position: fixed; z-index: 999; left: 0; bottom: 0; width: 100%; height: 46px; line-height: 46px; background: #fff;}
.mall-cart-sum{ line-height: 18px; padding-top: 5px;}
.mall-cart-btn{ background:#e64340; display: block; color: #fff; padding: 0 30px; border-radius: 0;}


/*重置CheckBox 样式*/
page .wx-checkbox-input{border-radius: 50%;width: 40rpx;height: 40rpx;}
page .wx-checkbox-input.wx-checkbox-input-checked::before{font-size: 40rpx;}
.wx-checkbox-input.wx-checkbox-input-checked{border-color: #09bb07;}

/* 右侧浮动按钮 */
.aside-flote{ position: fixed; right: 30rpx; bottom: 120rpx;width: 70rpx;}
.aside-flote button{padding: 0;border-radius: 50%;line-height: 70rpx;}
.aside-flote button:nth-child(n+2){margin-top: 15rpx;}

@import "/css/DuoguanShop/DuoguanShop-template-default.wxss";