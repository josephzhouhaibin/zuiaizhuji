/**基本框架样式**/
.rec-img,.ads-img,.swiper-box,.goods-img{ position: absolute; left: 0; top: 0; width: 100%; height: 100%;}
.search{ -webkit-transition: all  0.5s ease;transition: all  0.5s ease;}

.swiper{ width: 100%; position: relative; padding-bottom: 50%;}
.swiper-img{ width: 100%; height: 100%;}
page .wx-swiper-dot{content:'';  width: 14rpx; height: 14rpx; border-radius: 50rpx;}
page .wx-swiper-dots.wx-swiper-dots-horizontal{ bottom: 0; overflow: visible; font-size: 0; padding:0 2rpx;}

.search{margin:20rpx; width:auto; z-index: 9;}
.address{max-width: 150rpx;line-height: 32px;font-size: 14px;}
.search-box{ background:#fff; border-radius: 6rpx;height: 32px;}
